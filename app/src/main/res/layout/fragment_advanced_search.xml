<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/advancedSearchTableLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <include
        android:id="@+id/flavorRow"
        layout="@layout/my_table_row"/>

    <include
        android:id="@+id/fillingRow"
        layout="@layout/my_table_row"/>

    <include
        android:id="@+id/categoryRow"
        layout="@layout/my_table_row"/>

    <Button
        android:id="@+id/buttonAdvancedSearchGo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/advanced_search_button_text_go"/>

</TableLayout>